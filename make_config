  BUILDOPT_HAVE_LIBUNWIND    = "yes"
  LIBUNWIND_INC=-I$(HOME)/sw/x86_64/include
  LIBUNWIND_LIB=-L$(HOME)/sw/x86_64/lib -lunwind

  PAPI_INC=$(PAPI_INCLUDE_OPTS)
